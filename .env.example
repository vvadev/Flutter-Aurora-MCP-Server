# Server Configuration
PORT=3000
HOST=0.0.0.0
DOCS_PATH=./docs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Session Management
SESSION_TTL_MS=3600000

# Security
ALLOWED_ORIGINS=*
LOG_LEVEL=info

# RAG / Semantic Search Configuration (Optional)
ENABLE_RAG=false
OPENAI_API_KEY=
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_EMBEDDING_MODEL=openai/text-embedding-3-small
EMBEDDING_CHUNK_SIZE=500
EMBEDDING_CHUNK_OVERLAP=50
RAG_TOP_K_RESULTS=10
RAG_HYBRID_ALPHA=0.5

# Redis Configuration (for RAG embeddings cache)
REDIS_URL=redis://localhost:6379
ENABLE_RAG_CACHE=true
